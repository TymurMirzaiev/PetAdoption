{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "MongoDb": "mongodb://root:example@mongo:27017"
  },
  "RabbitMq": {
    "Host": "rabbitmq",
    "Port": 5672,
    "User": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Exchanges": [
      {
        "Name": "pet.events",
        "Type": "topic",
        "Durable": true,
        "AutoDelete": false
      },
      {
        "Name": "pet.deadletter",
        "Type": "fanout",
        "Durable": true,
        "AutoDelete": false
      }
    ],
    "Queues": [
      {
        "Name": "pet.reserved.notifications",
        "Durable": true,
        "Exclusive": false,
        "AutoDelete": false,
        "Bindings": [
          {
            "Exchange": "pet.events",
            "RoutingKey": "pet.reserved.v1"
          }
        ],
        "Arguments": {
          "x-dead-letter-exchange": "pet.deadletter"
        }
      },
      {
        "Name": "pet.adopted.notifications",
        "Durable": true,
        "Exclusive": false,
        "AutoDelete": false,
        "Bindings": [
          {
            "Exchange": "pet.events",
            "RoutingKey": "pet.adopted.v1"
          }
        ],
        "Arguments": {
          "x-dead-letter-exchange": "pet.deadletter"
        }
      },
      {
        "Name": "pet.reservation.cancelled.notifications",
        "Durable": true,
        "Exclusive": false,
        "AutoDelete": false,
        "Bindings": [
          {
            "Exchange": "pet.events",
            "RoutingKey": "pet.reservation.cancelled.v1"
          }
        ],
        "Arguments": {
          "x-dead-letter-exchange": "pet.deadletter"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
